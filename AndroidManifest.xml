<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.org.sucu.tatupload"
    android:versionCode="16"
    android:versionName="1.7.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".TatUploadApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".message.SmsReceiver" >
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activity.SmsReviewActivity"
            android:label="@string/title_activity_sms_review"
            android:parentActivityName=".activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="uk.org.sucu.tatupload.MainActivity" />
        </activity>
        <activity
            android:name=".activity.ParameterViewActivity"
            android:label="@string/invalid_heading"
            android:parentActivityName=".activity.OptionActivity" >
        </activity>
        <activity
            android:name=".activity.OptionActivity"
            android:label="@string/settings"
            android:parentActivityName=".activity.MainActivity" >
        </activity>
        <activity
            android:name=".activity.TutorialActivity"
            android:label="@string/title_activity_tutorial" >
        </activity>
    </application>

</manifest>
